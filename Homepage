<script>
// ══ PARTICLES ══
const cv  = document.getElementById('cv');
const ctx = cv.getContext('2d');
function resize() { cv.width = innerWidth; cv.height = innerHeight; }
resize();
window.addEventListener('resize', resize);

const pts = Array.from({ length: 45 }, () => ({
  x:  Math.random() * innerWidth,
  y:  Math.random() * innerHeight,
  vx: (Math.random() - .5) * .3,
  vy: (Math.random() - .5) * .3,
  r:  Math.random() * 1.4 + .3,
  a:  Math.random() * .32 + .08
}));

(function tick() {
  ctx.clearRect(0, 0, cv.width, cv.height);
  for (let i = 0; i < pts.length; i++) {
    for (let j = i + 1; j < pts.length; j++) {
      const dx = pts[i].x - pts[j].x;
      const dy = pts[i].y - pts[j].y;
      const d  = Math.sqrt(dx*dx + dy*dy);
      if (d < 120) {
        ctx.beginPath();
        ctx.strokeStyle = `rgba(0,200,255,${(1 - d/120) * .12})`;
        ctx.lineWidth = .5;
        ctx.moveTo(pts[i].x, pts[i].y);
        ctx.lineTo(pts[j].x, pts[j].y);
        ctx.stroke();
      }
    }
  }
  pts.forEach(p => {
    ctx.beginPath();
    ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
    ctx.fillStyle = `rgba(0,200,255,${p.a})`;
    ctx.fill();
    p.x += p.vx; p.y += p.vy;
    if (p.x < 0)         p.x = cv.width;
    if (p.x > cv.width)  p.x = 0;
    if (p.y < 0)         p.y = cv.height;
    if (p.y > cv.height) p.y = 0;
  });
  requestAnimationFrame(tick);
})();

// ══ HERO ANIMATIONS ══
[
  ['ey',  200],
  ['r1',  430],
  ['r2',  620],
  ['sub', 840],
  ['sh',  1240],
].forEach(([id, ms]) => {
  setTimeout(() => document.getElementById(id).classList.add('on'), ms);
});

// ══ STAT COUNTERS ══
function countUp(el, target, decimals, suffix, duration) {
  let start = null;
  function step(ts) {
    if (!start) start = ts;
    const prog = Math.min((ts - start) / duration, 1);
    const ease = 1 - Math.pow(1 - prog, 3);
    const val = target * ease;
    el.textContent = (decimals ? val.toFixed(1) : Math.round(val)) + suffix;
    if (prog < 1) requestAnimationFrame(step);
  }
  requestAnimationFrame(step);
}

const obs = new IntersectionObserver(entries => {
  entries.forEach(e => {
    if (!e.isIntersecting) return;
    countUp(document.getElementById('s1'), 4.8, true,  'B', 1600);
    countUp(document.getElementById('s2'), 97,  false, '%', 1600);
    countUp(document.getElementById('s3'), 600, false, '+', 1600);
    obs.disconnect();
  });
}, { threshold: 0.3 });

obs.observe(document.querySelector('.stats-wrap'));

// ══ CUSTOM CURSOR ══
(function() {
  const cur = document.getElementById('cursor');
  const ring = document.getElementById('cursor-ring');
  
  let mouseX = 0, mouseY = 0;
  let ringX = 0, ringY = 0;
  
  document.addEventListener('mousemove', (e) => {
    mouseX = e.clientX;
    mouseY = e.clientY;
    cur.style.left = mouseX + 'px';
    cur.style.top = mouseY + 'px';
  });
  
  function animateRing() {
    ringX += (mouseX - ringX) * 0.11;
    ringY += (mouseY - ringY) * 0.11;
    ring.style.left = ringX + 'px';
    ring.style.top = ringY + 'px';
    requestAnimationFrame(animateRing);
  }
  animateRing();
  
  const interactiveElements = 'a, button, .mod-row, .stat';
  
  document.addEventListener('mouseover', (e) => {
    if (e.target.matches(interactiveElements) || e.target.closest(interactiveElements)) {
      cur.style.width = '18px';
      cur.style.height = '18px';
      cur.style.background = 'rgba(0, 200, 255, 0.3)';
      ring.style.width = '48px';
      ring.style.height = '48px';
    }
  });
  
  document.addEventListener('mouseout', (e) => {
    if (e.target.matches(interactiveElements) || e.target.closest(interactiveElements)) {
      cur.style.width = '10px';
      cur.style.height = '10px';
      cur.style.background = '#00c8ff';
      ring.style.width = '32px';
      ring.style.height = '32px';
    }
  });
})();
</script>

</body>
</html>
